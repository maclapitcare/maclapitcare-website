{
  "buildCommand": "mkdir -p dist/public && cd client && npm install && npm run build && cd .. && cp -r client/dist/* dist/public/ && cp -r public/* dist/public/",
  "outputDirectory": "dist/public",
  "installCommand": "echo 'Dependencies installed in build command'",
  "headers": [
    {
      "source": "/(.*\\.(png|jpg|jpeg|svg|webp|gif))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}