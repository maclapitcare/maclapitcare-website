{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "api/contact.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/service-request.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/contact",
      "dest": "/api/contact.js"
    },
    {
      "src": "/api/service-request",
      "dest": "/api/service-request.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}